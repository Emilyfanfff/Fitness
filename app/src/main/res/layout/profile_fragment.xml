<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- User image -->
    <View
        android:id="@+id/user_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="152dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:background="@mipmap/user_image"
        />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="129dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="123dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textAppearance="@style/maxine_caul"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.58sp"
        android:gravity="center_horizontal|top"
        />
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="209dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="83dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text=""
        android:textAppearance="@style/maxcaulfiel"
        android:lineSpacingExtra="3sp"
        android:translationY="-1.29sp"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:id="@+id/profile_address"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="" />

    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="" />

    <TextView
        android:id="@+id/profile_birthday"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="" />

    <TextView
        android:id="@+id/profile_sport"
        android:layout_width="343dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_background"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="" />
</LinearLayout>