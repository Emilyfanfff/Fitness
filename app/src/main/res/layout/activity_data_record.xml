<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:gravity="center_horizontal|top"
        android:text="@string/data_home"
        android:textAppearance="@style/data_home"
        android:textSize="24sp"
        android:background="@drawable/data_header"/>

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:background="#00FFFFFF"
            app:srcCompat="@drawable/arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sport"
            android:layout_width="107dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="311dp"
            android:gravity="top"
            android:text=""
            android:textAppearance="@style/swimming" />

        <TextView
            android:id="@+id/minute"
            android:layout_width="78dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="272dp"
            android:layout_marginTop="311dp"
            android:alpha="0.5"
            android:gravity="top"
            android:text=""
            android:textAppearance="@style/kcal_hr" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="341dp"
            android:layout_height="198dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/sport" />

        <EditText
            android:id="@+id/insert"
            android:layout_width="207dp"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="435dp"
            android:background="@drawable/login_email"
            android:hint="min"
            android:textAlignment="viewStart"
            android:textColor="#908E8E" />

        <TextView
            android:id="@+id/mintext"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="451dp"
            android:gravity="top"
            android:text="Min"
            android:textAppearance="@style/min" />

        <Button
            android:id="@+id/button"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="534dp"
            android:background="#558AF8"
            android:text="Confirm" />

    </RelativeLayout>


</LinearLayout>